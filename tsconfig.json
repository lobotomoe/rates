{
  "compilerOptions": {
    "lib": ["es2015"],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "declaration": false,
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "baseUrl": "src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "types", "lib", "scripts"]
}
